extends base.jade

block head
  {{block.super}}
  title 修改个人资料

block content
  .row.margin-top-xl
    form.large-4.columns.large-centered
      .row
        .large-12.columns
          h4 修改资料
      .row
        .margin-top-m
          .large-6.columns

          .large-6.columns
            .row
              input#js-image-input.hidden-for-large-down(type="file", name="picture")
              a.button.tiny.large-10.large-centered.select-image-btn(href="#") 选择头像

      .row
        .large-12.columns
          input(type="text", placeholder="职业")
      .row
        .large-12.columns
          textarea(type="text", placeholder="介绍", rows=3)

      .row.action
        .large-4.columns.large-centered.margin-top-m
          a.button.tiny.large-12.columns(href="#") 保存

  script(type="text/javascript", src="/static/js/profile.js")
